# Copy to .env and adjust as needed.
#
# WARNING: This repo is intended for local/dev usage. Do not use these defaults in production.

# Odoo / Postgres
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=postgres

ODOO_HTTP_PORT=8069

# Host ports (adjust if you have conflicts)
POSTGRES_PORT=5432
REDIS_PORT=6379
MAILPIT_HTTP_PORT=8025
MAILPIT_SMTP_PORT=1025
EVOLUTION_HTTP_PORT=8080
WAHA_HTTP_PORT=3000

# Odoo "master password" (database manager password)
# Kept as a separate variable because different images/scripts use different env var names.
ODOO_MASTER_PASSWORD=admin

# Docker build: discuss_hub + OCA branches/refs
DISCUSS_HUB_GIT_URL=https://github.com/lcsztl/discuss_hub.git
DISCUSS_HUB_REF=18.0
OCA_SOCIAL_REF=18.0
OCA_HELPDESK_REF=18.0

# Optional integration: Evolution API (if you enable the evolution profile)
DISCUSS_HUB_EVOLUTION_URL=http://evolution:8080
DISCUSS_HUB_EVOLUTION_APIKEY=change-me

# Optional integration: WAHA (if you enable the waha profile)
WAHA_API_KEY=change-me
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=change-me
